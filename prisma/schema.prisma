generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User schema
model User {
  id             String       @id @default(uuid())
  email          String       @unique
  name           String
  password       String
  profilePicture String
  enrollments    Enrollment[]
}

// Course schema
model Course {
  id          String       @id @default(uuid())
  name        String
  category    String
  level       String
  description String
  enrollments Enrollment[]
}

// Enrollment schema
model Enrollment {
  id       String @id @default(uuid())
  courseId String
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  course   Course @relation(fields: [courseId], references: [id])
}
